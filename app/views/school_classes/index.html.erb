<h1>Список классов</h1>

<table>
  <tr>
    <th>Номер</th>
    <th>Буква</th>
  </tr>

<% @school_classes.each do |school_class| %>
  <tr>
    <td><%=h school_class.number %></td>
    <td><%=h school_class.letter %></td>
    <td><%= link_to 'Показать', school_class %></td>
    <td><%= link_to 'Редактировать', edit_school_class_path(school_class) %></td>
    <td><%= link_to 'Удалить', school_class, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Создать новый класс', new_school_class_path %>